{% extends "layout.html.twig" %}
{% block contenu %}
	<form method="post" action="{{ path('Jeux.validFormEdit') }}">
		<div class="row">
			{% if errors is defined %}
			     <div data-alert class="alert-box alert round">
			     
			     	{% for error in errors %}
						<li>{{ error.getPropertyPath }} : {{ error.getMessage }}</li>
					{% endfor %}
            	
            	<a href="#" class="close">&times;</a>
        		</div>
			{% endif %}

			<fieldset>
				<legend> Modifier un jeux </legend>
				<input name="id" type="hidden" value="{{donnees.id}}" />
				<label>Nom :
					<input name="nom"  type="text"  size="18" value="{{donnees.nom}}" />
					{% if erreurs.nom is defined %}
						<small class="error">{{erreurs.nom}}</small>
					{% endif %}
				</label>
				<label>Type :
					<select name="typeJeux_id">
						{% if  donnees.typeJeux_id is not defined or donnees.typeJeux_id is empty   %}
							<option value="">Veuillez s√©lectionner un Jeux</option>
						{% endif %}
						{% for typeJeux in typeJeux %}
							<option value="{{ typeJeux.id }}"
									{% if donnees.typeJeux_id is defined and typeJeux.id == donnees.typeJeux_id %}selected{% endif %}>
								{{ typeJeux.libelle }}
							</option>
						{% endfor %}
					</select>
					{% if erreurs.typeJeux_id is defined %}
						<small class="error">{{erreurs.typeJeux_id}}</small>
					{% endif %}
				</label>
				<label>Prix
					<input name="prix"  type="text"  size="18" 	value="{{donnees.prix}}"/>
					{% if erreurs.prix is defined %}
						<small class="error">{{erreurs.prix}}</small>
					{% endif %}
				</label>
				<label>Photo
					<input name="photo"  type="text"  size="18" value="{{donnees.photo}}"/>
					{% if erreurs.photo is defined %}
						<small class="error">{{erreurs.photo}}</small>
					{% endif %}
				</label>
				<label>Plateforme :
					<input name="plateforme"  type="text"  size="18" value="{{donnees.plateforme}}" />
					{% if erreurs.plateforme is defined %}
						<small class="error">{{erreurs.plateforme}}</small>
					{% endif %}
				</label>
				<label>Dispo :
					<input name="dispo"  type="text"  size="18" 	value="{{donnees.dispo}}"/>
					{% if erreurs.dispo is defined %}
						<small class="error">{{erreurs.dispo}}</small>
					{% endif %}
				</label>
				<label>Stock :
					<input name="stock"  type="text"  size="18" 	value="{{donnees.stock}}"/>
					{% if erreurs.stock is defined %}
						<small class="error">{{erreurs.stock}}</small>
					{% endif %}
				</label>

				<input type="hidden" id="_method" name="_method" value="put" />

				<input type="submit" name="modifierJeux" value="Modifier" />
			</fieldset>
		</div>
	</form>
{% endblock %}
