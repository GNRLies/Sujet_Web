{% extends "layout.html.twig" %}
{% block contenu %}
    <form method="post" action="{{ path('user.validFormDelete') }}">
        <div class="row">

            <fieldset>
                <legend>Confirmer la suppression du compte : </legend>
                <input name="id"  type="hidden" value="{{donnees.id}}" />
                <label>Nom : <h5>{{donnees.login}}</h5> </label>
                <input type="hidden" id="_method" name="_method" value="delete" />

                <input type="submit" name="supprimerUser" value="Supprimer" />
            </fieldset>
        </div>
    </form>
{% endblock %}